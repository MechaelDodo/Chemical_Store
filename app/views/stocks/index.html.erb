<p style="color: green"><%= notice %></p>

<h1>Stocks</h1>

<div id="stocks">
  <% @stocks.each do |stock| %>
    <%= render stock %>
    <% if user_signed_in? %>
        <p>
          <%= link_to "Show this stock", stock %>
        </p>
    <% end %>
  <% end %>
</div>
<% if user_signed_in? %>
    <%= link_to "New stock", new_stock_path %>
<% end %>
